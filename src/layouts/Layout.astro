---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Gestor de gastos" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Gestor de Gastos - {title}</title>
  </head>
  <body class="bg-zinc-900 font-sans">
    <main class="container mx-auto">
      <slot />
    </main>
  </body>
</html>
