---
import Card from "../Card.astro";

import { categories } from "../../config/categories.json";
---

<div class="my-4">
  <Card>
    <form action="" class="space-y-4">
      <h1 class="text-2xl text-center font-bold">Registrar gasto</h1>

      <div class="space-y-2 w-full">
        <label for="name" class="text-zinc-300 text-lg">Nombre</label>

        <input
          type="text"
          class="bg-zinc-700 w-full text-zinc-300 rounded-lg py-2 px-4"
        />
      </div>

      <div class="space-y-2 w-full">
        <label for="mount" class="text-zinc-300 text-lg">Monto</label>

        <input
          type="number"
          class="bg-zinc-700 w-full text-zinc-300 rounded-lg py-2 px-4"
        />
      </div>

      <div class="space-y-2 w-full">
        <label for="category" class="text-zinc-300 text-lg">Categoria</label>

        <select class="bg-zinc-700 w-full text-zinc-300 rounded-lg py-2 px-4">
          {
            categories.map((category) => (
              <option value={category}>{category}</option>
            ))
          }
        </select>
      </div>
    </form>
  </Card>
</div>
